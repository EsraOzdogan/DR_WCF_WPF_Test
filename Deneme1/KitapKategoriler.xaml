                <Button Content="Çizgi Roman" HorizontalAlignment="Right" Margin="-262,163,-18,0" VerticalAlignment="Top" Width="625" Height="34" Background="{x:Null}" FontWeight="Bold" Click="Button_Click_5"/>
                <Button Content="Prestij Kitapları" HorizontalAlignment="Left" Margin="-281,132,-57,0" VerticalAlignment="Top" Width="683" Height="32" Background="{x:Null}" FontWeight="Bold" Click="Button_Click_4"/>






            </Grid>
        </ScrollViewer>
