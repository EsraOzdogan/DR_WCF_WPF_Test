                    </MenuItem>

















                </Menu>

                <Button Content="Eğitim Başvuru" HorizontalAlignment="Left" Margin="-199,107,0,0" VerticalAlignment="Top" Width="524" Height="25" Background="{x:Null}" BorderBrush="#FFC5C5C5" FontWeight="Bold" Click="Button_Click_3"/>
                <Button Content="Mizah" HorizontalAlignment="Left" Margin="-240,222,0,0" VerticalAlignment="Top" Width="545" Height="34" Background="{x:Null}" FontWeight="Bold" Click="Button_Click_7"/>
