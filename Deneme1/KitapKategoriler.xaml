                    </Button.Background>
                </Button>
                <Button Content="" HorizontalAlignment="Left" Margin="205,20,0,0" VerticalAlignment="Top" Width="29" Height="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_2">
                    <Button.Background>
                        <ImageBrush ImageSource="images/loupe.png"/>
                    </Button.Background>
                </Button>
                <Button Content="" HorizontalAlignment="Left" Margin="248,22,0,0" VerticalAlignment="Top" Width="34" Height="28" RenderTransformOrigin="0.305,0.299" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_10">
                    <Button.Background>
                        <ImageBrush ImageSource="images/shopping-cart.png"/>
                    </Button.Background>
                </Button>
                <Menu IsMainMenu="True" Margin="0,74,0,-8" Background="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Left" Width="303" Grid.RowSpan="2">
